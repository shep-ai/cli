# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TypeSpec files
[*.tsp]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 4

# Git config files
[.git*]
indent_size = 4
